# Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# Database Configuration
DB_USERNAME=your_database_username
DB_PASSWORD=your_database_password
SPRING_DATASOURCE_URL=jdbc:mysql://your-host:3306/your-database?createDatabaseIfNotExist=true&useSSL=false&allowPublicKeyRetrieval=true
SPRING_DATASOURCE_USERNAME=your_spring_db_username
SPRING_DATASOURCE_PASSWORD=your_spring_db_password

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=YOUR_APP_NAME <your-email@domain.com>
ADMIN_EMAIL=your-admin@domain.com

# Payment Gateway (Razorpay) Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Cloud Storage Configuration - LOCAL STORAGE ONLY
CLOUDINARY_ENABLED=false
UPLOAD_DIR=./uploads

# Application Configuration
SPRING_PROFILES_ACTIVE=dev
FRONTEND_URL=http://localhost:5173
PORT=8081